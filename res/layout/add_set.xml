<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_set" />
        <CheckBox
        android:id="@+id/enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable" />
    
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/range" />
	        <EditText
	            android:id="@+id/from_num"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:selectAllOnFocus="true"
	            android:inputType="numberSigned" >

	        </EditText>
	        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/to" />

	        <EditText
	            android:id="@+id/to_num"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:selectAllOnFocus="true"
	            android:inputType="numberSigned" >

	        </EditText>

	</LinearLayout>
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/op_nums" />
	        <EditText
	            android:id="@+id/op_nums"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:selectAllOnFocus="true"
	            android:inputType="numberSigned" >

	        </EditText>

	</LinearLayout>
	<CheckBox
        android:id="@+id/carry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carry" />
	<CheckBox
        android:id="@+id/two_add_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two_add_single" />
	<CheckBox
        android:id="@+id/two_add_tens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two_add_tens" />
	<CheckBox
        android:id="@+id/tens_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tens_add" />

    <View android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
